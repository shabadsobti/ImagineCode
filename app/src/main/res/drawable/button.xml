<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#e67e22" />
            <gradient android:angle="-90" android:startColor="#e4695e" android:endColor="#e4695e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#e4695e" />
            <solid android:color="#e4695e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#e4695e" />
            <gradient android:angle="-90" android:startColor="#e4695e" android:endColor="#e4695e" />
        </shape>
    </item>
</selector>